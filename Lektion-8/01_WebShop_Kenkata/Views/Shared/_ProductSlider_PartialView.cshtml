@model ProductSlider_PartialViewModel

<section class="productcard-section">
    <div class="container">
        <div class="section-title">
            <h1>@Model.SectionTitle.Title <span>@Model.SectionTitle.SpanTitle</span></h1>
            <img src="images/wave-line.svg" alt="waveline">
            <p>@Model.SectionTitle.Text</p>
        </div>

        <div class="row row-cols-1 row-cols-md-@Model.Products.Count() g-4">

            @foreach(var product in Model.Products)
            {
                <div class="col">
                    <div class="card h-100">
                        <ul class="card-menu">
                            @if(product.InStock)
                            {
                                <li><i class="fa-solid fa-circle instock"></i></li>
                            }
                            else
                            {
                                <li><i class="fa-solid fa-circle outofstock"></i></li>
                            }
                            <li><a href="#"><i class="fa-regular fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa-regular fa-shuffle"></i></a></li>
                            <li><a href="#"><i class="fa-regular fa-magnifying-glass"></i></a></li>
                            <li><a href="#"><i class="fa-regular fa-cart-shopping"></i></a></li>
                        </ul>
                        <img src="images/products/@product.ImageName" alt="@product.Name">
                        <div class="card-body">
                            <h1>@product.Name</h1>
                            <button disabled>@product.CategoryName</button>
                            @if(product.DiscountPrice != product.Price)
                            {
                                <p class="card-old-price">€@product.Price</p>
                            }
                            else
                            {
                                 <p class="card-old-price"></p>
                            }

                            
                            <div class="d-flex justify-content-between align-items-center w-100 ">
                                <p class="card-discount-price ">€@product.DiscountPrice</p>
                                <div class="text-theme">
                                    @if(product.Rating > 0)
                                    {
                                        for(var i=0; i<product.Rating; i++)
                                        {
                                            <i class="fa-solid fa-star"></i>
                                        }
                                        if(product.Rating < 5)
                                        {
                                            var result = 5 - product.Rating;
                                            for(var i=0; i<result; i++)
                                            {
                                                <i class="fa-regular fa-star"></i>
                                            }
                                        }

                                    }
                                    else
                                    {
                                        <i class="fa-regular fa-star"></i>
                                        <i class="fa-regular fa-star"></i>
                                        <i class="fa-regular fa-star"></i>
                                        <i class="fa-regular fa-star"></i>
                                        <i class="fa-regular fa-star"></i>
                                    }
                                </div>
                            </div>                      
                        </div>
                        <div class="card-background"></div>
                    </div>
                </div>  

            }  

        </div>
    </div>
</section>